<% content_for :title, "Categories" %>
<div class="page-wrapper font-robo">
  <div class="wrapper wrapper--w960">
    <div class="card card-2">
      <div class="row">
        <div class = "col-sm-0 col-md-2 card-heading"></div>
        <div class="col-sm-12 col-md-10">
          <div class="card-body">
            <h1 class="title text-center">Product Catagory List</h1>
            <div class="row no-gutters">
              <div class="col-12">
                <%= render "categories/form" %>
              </div>
            </div>
            <br/>
            <table class="table table-striped table-bordered table-hover table-dark">
              <caption class="text-center"> List of Available categories</caption>
              <thead>
                <tr class="text-center">
                  <th scope="col">#</th>
                  <th scope="col"> Categories</th>
                  <th scope="col">Edit</th>
                  <th scope="col">Delete</th>
                </tr>
              </thead>
              <% if @categories.present? %>
                <tbody>
                  <% @categories.each do |category|%>
                    <tr>
                      <th scope="row"><%= @categories.index(category)+1 %></th>
                      <td><%= category.title%></td>
                      <td class="text-center">
                        <%= link_to "", edit_category_path(category), class:"fa fa-edit"%>
                      </td>
                      <td class="text-center">
                        <%= link_to "", category_path(category), data: {confirm: "Are you sure?" }, method: :delete, class:"fa fa-trash"%>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              <% end %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>