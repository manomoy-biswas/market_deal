<% content_for :title, "Categories" %>
<div class="page-wrapper font-robo">
  <div class="wrapper wrapper--w960">
    <div class="card card-2">
      <div class="row">
        <div class = "col-sm-0 col-md-2 card-heading"></div>
        <div class="col-sm-12 col-md-10">
          <div class="card-body">
            <h2 class="title text-center">AVAILABLE QUANTITY LIST</h2>
            <div class="row no-gutters">
              <div class="col-12">
                <%= render "quantities/form" %>
              </div>
            </div>
            <br/>
            <table class="table table-striped table-bordered table-hover table-dark">
              <caption class="text-center"> List of Employees</caption>
              <thead>
                <tr class="text-center">
                  <th scope="col">#</th>
                  <th scope="col">Product</th>
                  <th scope="col">Product ID</th>
                  <th scope="col">Avaiable Quantity Option</th>
                  <th scope="col">Unit</th>
                  <th scope="col">Edit</th>
                  <th scope="col">Delete</th>
                </tr>
              </thead>
              <% if @quantities.present? %>
                <tbody>
                  <% @quantities.each do |quantity|%>
                    <tr>
                      <th scope="row"><%= @quantities.index(quantity)+1 %></th>
                      <td><%= quantity.product.product_name%></td>
                      <td><%= quantity.product.id%></td>
                      <td><%= quantity.quantity_size%></td>
                      <td><%= quantity.unit%></td>
                      <td class="text-center">
                        <%= link_to "", edit_quantity_path(quantity), class:"fa fa-edit"%>
                      </td>
                      <td class="text-center">
                        <%= link_to "", quantity_path(quantity), data: {confirm: "Are you sure?" }, method: :delete, class:"fa fa-trash"%>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              <% end %>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
